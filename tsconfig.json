{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "ES2015",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "noLib": false,
        "lib": ["ESNext"],
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["src/types", "node_modules/@types"],
        "strict": true,
        "plugins": [
            {
                "transform": "typia/lib/transform"
            }
        ],
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "src/test", "src/test/example"]
}
